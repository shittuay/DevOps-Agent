agent:
  name: "DevOps Agent"
  version: "1.0.0"
  log_level: "INFO"

claude:
  model: "claude-sonnet-4-20250514"
  max_tokens: 4096
  temperature: 0.7

aws:
  default_region: "us-east-1"
  profile: "default"
  enabled: true

kubernetes:
  default_context: "default"
  default_namespace: "default"
  kubeconfig: "~/.kube/config"
  enabled: true

github:
  enabled: true

gitlab:
  url: "https://gitlab.com"
  enabled: false

jenkins:
  url: "https://jenkins.example.com"
  enabled: false

safety:
  require_confirmation: true
  dangerous_commands:
    - "rm -rf /"
    - "rm -rf *"
    - "drop database"
    - "delete all"
    - "mkfs"
    - "dd if="
    - "> /dev/sda"
  dry_run_default: false
  command_timeout_seconds: 300

logging:
  file: "logs/agent.log"
  format: "json"
  max_size_mb: 100
  backup_count: 5
  console_output: true
